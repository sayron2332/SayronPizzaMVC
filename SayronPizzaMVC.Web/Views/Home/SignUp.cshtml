@using SayronPizzaMVC.Core.DTO_s;
@{
    Layout = "_AuthLayout";
}
@model CreateUserDto

<body>
    <section class="vh-100">

        <div class="container py-5 h-100">
            <div class="row d-flex align-items-center justify-content-center h-100">
                <div class="col-md-8 col-lg-7 col-xl-6">
                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
                         class="img-fluid" alt="Phone image">
                </div>
                <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                    <form method="post">
                       
                        <div class="form-outline mb-4">
                            <label class="form-label" for="form1Example23">First Name</label>
                            <input asp-for="FirstName" name="FirstName" type="text" id="form1Example23" class="form-control form-control-lg" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-outline mb-4">
                            <label class="form-label" for="form1Example23">Last Name</label>
                            <input asp-for="LastName" name="LastName" type="text" id="form1Example23" class="form-control form-control-lg" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <!-- Email input -->
                        <div class="form-outline mb-4">
                            <p class="text-danger">@ViewBag.Errors</p>
                            <label class="form-label" for="form1Example13">Email address</label>
                            <input asp-for="Email"  type="email" id="form1Example13" name="Email" class="form-control form-control-lg" />
                            <span asp-validation-for="Email" class="text-danger"></span>

                        </div>

                        <!-- Password input -->
                        <div class="form-outline mb-4">
                            <label class="form-label" for="form1Example23">Password</label>
                            <input asp-for="Password" name="Password" type="password" id="form1Example23" class="form-control form-control-lg" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <!-- Password input -->
                        <div class="form-outline mb-4">
                            <label class="form-label" for="form1Example23">Confirm Password</label>
                            <input asp-for="ConfirmPassword" name="ConfirmPassword" type="password" id="form1Example23" class="form-control form-control-lg" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div style="display:none;">
                        <select class="form-control select2" asp-for="Role" name="role" style="width: 100%;">
                            <option selected="selected">user</option>
                        </select>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mb-4">
                           
                            <a asp-action="ForgotPassword">Forgot password?</a>
                            <a asp-action="SignIn">Have account?</a>
                        </div>
                        <!-- Submit button -->
                        <button type="submit" asp-action="SignUp" class="btn btn-primary btn-lg btn-block">Sign up</button>


                    </form>
                </div>
            </div>
        </div>
    </section>
</body>
