@using SayronPizzaMVC.Core.DTO_s;
@{
    Layout = "_AuthLayout";
}

<body>
    <section class="vh-100">

        <div class="container py-5 h-100">
            <div class="row d-flex align-items-center justify-content-center h-100">
                <div class="col-md-8 col-lg-7 col-xl-6">
                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
                         class="img-fluid" alt="Phone image">
                </div>
                <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                    <form method="post">

                        <!-- Email input -->
                        <div class="form-outline mb-4">
                            <input type="hidden" required name="email" value="@ViewBag.Email">
                            <input type="hidden" required name="token" value="@ViewBag.Token">
                            <p class="text-danger">@ViewBag.Errors</p>
                         
                        </div>

                        <!-- Password input -->
                        <div class="form-outline mb-4">
                            <label class="form-label" for="form1Example23">New Password</label>
                            <input name="Password" type="password" id="form1Example23" class="form-control form-control-lg" />
                         
                        </div>

                        <div class="form-outline mb-4">

                            <label class="form-label" for="form1Example15">Confirm Password</label>
                            <input name="ConfirmPassword" type="password" id="form1Example15" class="form-control form-control-lg" />
                        
                         </div>
                    

                        <!-- Submit button -->
                        <button type="submit" asp-action="ResetPassword" class="btn btn-primary btn-lg btn-block">Reset</button>


                    </form>
                </div>
            </div>
        </div>
    </section>
</body>
