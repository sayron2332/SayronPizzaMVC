@using SayronPizzaMVC.Core.DTO_s;
@{
    Layout = "_AuthLayout";
}
@model ForgotPasswordDto
<body>
    <section class="vh-100">

        <div class="container py-5 h-100">
            <h2 class="text-center">Reset Password to Sayron Pizza</h2>
            <div class="row d-flex align-items-center justify-content-center h-100">
                <div class="col-md-8 col-lg-7 col-xl-6">
                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
                         class="img-fluid" alt="Phone image">
                </div>
                <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                    <form method="post">
                        <!-- Email input -->
                        <div class="form-outline mb-4">
                            <p class="text-danger">@ViewBag.Errors</p>
                            <label class="form-label" for="form1Example13">Email address</label>
                            <input type="email" id="form1Example13" name="Email" class="form-control form-control-lg" />
                            <span asp-validation-for="Email" class="text-danger"></span>

                        </div>
                        <button type="submit" asp-action="ForgotPassword" class="btn btn-primary btn-lg btn-block">Send</button>
                    </form>
                </div>
            </div>
        </div>
    </section>
</body>
